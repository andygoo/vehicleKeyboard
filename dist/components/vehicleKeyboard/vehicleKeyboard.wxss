/* pages/vehicleKeyboard/vehicleKeyboard.wxss */
.keyboard {
  z-index: 9999;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: auto;
  background-color: rgb(210,213,219);
  display: -webkit-flex;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
}

.td {
  font-family: "微软雅黑";
  text-align: center;
  font-size: 36rpx;
  width: 74rpx;
  height: 84rpx;
  line-height: 88rpx;
  background: #fff;
  margin: 10rpx 5rpx;
  color: #1e1e1e;
  border-radius: 10rpx;
  box-shadow:0 1px 0 0 rgba(0,0,0,0.35);
}

.td_num {
  width: 66rpx;
}

.td_nor {
  width: 84rpx;
  margin: 10rpx 4rpx;
}

.td_big_right {
  margin-right: 44rpx;
}

.td_big_left {
  margin-left: 44rpx;
}

.td_spec_fin {
  width: 23%;
  justify-self: flex-end;
  background-color: #0099FF;
  color: #fff;
}

.td_spec_del {
  position: absolute;
  width: 84rpx;
  right: 5rpx;
  bottom: 0;
  background-color: rgba(119,136,153,0.5);
}

.board_bg {
  box-shadow: 0 0 0 #e5e5e5;
  background: #e5e5e5;
}

.board_bg_spec {
  box-shadow: 0 0 0 #e5e5e5;
}